/* pages/page33treehole/page33treehole.wxss */
.system-talk{
  margin-top:80rpx;
  width:92%;
  margin-left:4%;
  display: flex;
  align-items: center;
}
.system-talk image{
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
  border:3rpx solid blue;
}
.system-talk .triangle{
    margin-left:30rpx;
    width: 0;
    height: 0;
    border-top: 20rpx solid transparent;
    border-right: 20rpx solid blue;
    border-bottom: 20rpx solid transparent;
}
.system-talk .text {
 
  height:80rpx;
  border: 5rpx solid blue;
  border-radius:20rpx;
  padding-left:20rpx;
  padding-right:50rpx;
  box-shadow: 0 0 20rpx 5rpx gray;
  display: flex;
  align-items: center;
  justify-content: left;
}

.user-talk {
  margin-left:70rpx;
  margin-top:80rpx;
  display: flex;
  justify-content: right;
}

.user-talk .text{
  background-color: #2ca3e7;
  width:500rpx;
  height:700rpx;
  border-radius:30rpx;
  margin-right:40rpx;
  box-shadow: 0 0 10rpx 5rpx gray;
}

.user-talk image{
  width:100rpx;
  height:100rpx;
  border-radius: 50rpx;
  border:3rpx solid blue;
}

.user-talk .text textarea {
  background-color: white;
  color:gray;
  height:600rpx;
  width:400rpx;
  padding:10rpx 10rpx 10rpx 10rpx;
  margin-top:40rpx;
  margin-left:40rpx;

  border-radius:30rpx;
}

.submit {
  margin-top:80rpx;
  width:40%;
  height:80rpx;
  margin-left:30%;
  background-color: #2ca3e7;
  border-radius: 40rpx;
  color:white;
  display:flex;
  align-items: center;
  justify-content: center;
}