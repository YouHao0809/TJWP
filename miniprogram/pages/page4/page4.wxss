/* pages/page4/page4.wxss */
.upper-card{
  width:96%;
  margin-left:2%;
  margin-right:2%;
  margin-top:2%;
  border: 1rpx solid gray;
  box-shadow: 0rpx 0rpx 20rpx 5rpx darkgray ;
  border-radius:40rpx;
  padding-top:5%;
  padding-bottom:5%;
}
.left-images{
  width:330rpx;
  float:left;
}
.profile{
  width:250rpx;
  margin-top:30rpx;
  margin-left:30rpx;
  border-radius:30rpx;
}
.gender{
  width:70rpx;
  border:1rpx solid black;
  position: relative;
  margin-left:-50rpx;
  margin-bottom:180rpx;
}
.right-texts{
 margin-top:20rpx;
}
.name {
  float:left;
  color:black;
  font-size:60rpx;
  font-weight: bold;
}
.campus{
  border: 1rpx solid rgb(42, 206, 42);
  border-radius:10rpx;
  background-color: rgb(198, 255, 198);
  color:green;
  font-size:30rpx;
  padding:1% 1% 1% 1%;
  display: flex;
  align-items: center;
  justify-content: center;
  height:40rpx;
  float:left;
  margin-left:50rpx;
  margin-top:30rpx;
}

.info{
  float:left;
  border: 1rpx dotted gray;
  border-radius:10rpx;
  margin-top:20rpx;
  margin-left:-20rpx;
}
.info view{
  color:gray;
  margin-top:10rpx;
  font-size:30rpx;
  width:350rpx;
  margin-left:5rpx;
}

.lower-buttons button{
  width:96% !important;
  border:1rpx solid gray;
  box-shadow: 0rpx 0rpx 10rpx 5rpx darkgray ;
  border-radius:20rpx;
  margin-top:30rpx;
  font-weight: 500;
  color:rgb(46, 161, 255);
}